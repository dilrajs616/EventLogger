<form action="/register" method="POST" id="register_form" class="max-w-sm mx-auto bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
  <h2 class="text-2xl mb-4">WELCOME TO EVENT LOGGER</h2>
  <label for="name" class="block text-gray-700 font-bold mb-2">Name:</label>
  <input type="text" id="name" name="name" required class="appearance-none border bg-slate-50 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
  <br />
  <label for="email" class="block text-gray-700 font-bold mb-2">Email:</label>
  <input type="email" id="email" name="email" required class="appearance-none bg-slate-50 border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
  <br />
  <label for="password" class="block text-gray-700 font-bold mb-2">Password:</label>
  <input type="password" id="password" name="password" required class="appearance-none bg-slate-50 border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
  <br />
  <label for="subject" class="block text-gray-700 font-bold mb-2">Choose a subject:</label>
  <select name="subject" id="subject" required class="appearance-none bg-slate-50 border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
      <option value="select">Select</option>
      <% subjects.forEach(subject => { %>
          <option value="<%= subject %>"><%= subject %></option>
      <% }); %>
  </select>
  <br /> <br>
  <input type="submit" value="Register" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
</form>
<br />
<p class="text-center"><a href="/login" class="text-blue-500 hover:text-blue-700">Already have an account? Login here</a></p>

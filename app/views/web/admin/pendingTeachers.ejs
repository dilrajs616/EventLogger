<% if (newEmptyResult === true) { %>
    <div class="flex justify-center items-center h-full py-20">
        <h1 class="text-2xl font-bold text-gray-600">No Pending Teachers Left</h1>
    </div>
<% } %>

<% if (newEmptyResult === false) { %>

    <div class="overflow-x-auto">
        <table class="table">
            <!-- head -->
            <thead class="text-center">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Subject</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% pendingTeacherTable.forEach(teacher => { %>
                    <tr class="text-center">
                        <td class="justify-center items-center content-center text-center">
                            <div class="flex items-center justify-center"> <!-- Added justify-center -->
                                <div class="avatar">
                                    <div class="mask mask-squircle h-12 w-12 flex items-center justify-center"> <!-- Added flex and justify-center -->
                                        <img src="/img/default_image.jpg" alt="Avatar" class="h-full w-full object-cover" /> <!-- Adjusted img tag -->
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="items-center">
                                <div class="font-bold"><%= teacher.name %></div>
                                <div class="text-sm opacity-50"><%= teacher.email %></div>
                            </div>
                        </td>
                        <td>
                            <%= teacher.subject %>
                            <br />
                            <span class="badge badge-ghost badge-sm"><%= teacher.subject %></span>
                        </td>
                        <th class="flex gap-10 justify-center">
                            <form action="/admin/teacher/approve" method="post">
                                <input type="hidden" name="id" value="<%= teacher.id %>">
                                <input type="submit" value="Approve" class="btn btn-ghost btn-xs">
                            </form>
                            <form action="/admin/teacher/delete" method="post">
                                <input type="hidden" name="id" value="<%= teacher.id %>">
                                <input type="submit" value="Delete" class="btn btn-ghost btn-xs">
                            </form>
                        </th>
                    </tr>
                <% }) %>
            </tbody>
            <!-- foot -->
            <tfoot>
                
            </tfoot>
        </table>
    </div>

<% } %>